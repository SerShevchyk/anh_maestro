<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="grant-submission-page__container">
        <div class="image">
          <img src="{{ image }}" style="max-width: 100%;">
        </div>
        <h2 class="title mb-3">{{ title }}</h2>
        <div class="desktop-wrapper">
          <div class="description__container">
            <div class="description mt-3">
              {{ description }}
            </div>
          </div>
          <div class="d-flex justify-content-center mt-5 grant__concept--link">
            {{ link }}
          </div>
        </div>

        <div class="mobile-wrapper">
          In order to fill out the form, please go to the desktop version of the site.
        </div>
      </div>
    </div>
  </div>
</div>

